{
  "author": "Arkadiusz Oleksy <oleksy.arkadiusz@gmail.com>",
  "name": "@aarek/nest-stan",
  "version": "0.0.1-alpha1",
  "description": "NATS Streaming addon for NestJS",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "build:watch": "rm -rf dist && tsc --watch -p tsconfig.build.json",
    "documentation": "typedoc --mode file --out ./documentation ./src",
    "test": "jest",
    "test:integration": "jest --config ./jest-e2e.json"
  },
  "keywords": [
    "nestjs",
    "node-nats-streaming",
    "nats"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aarek/nest-stan"
  },
  "bugs": "https://github.com/aarek/nest-stan",
  "license": "MIT",
  "devDependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^9.0.5",
    "@nestjs/testing": "^7.0.0",
    "@types/jest": "26.0.7",
    "@types/node": "14.0.26",
    "jest": "26.1.0",
    "prettier": "2.0.5",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.6.0",
    "ts-jest": "26.1.3",
    "ts-mockito": "2.6.1",
    "typedoc": "0.17.8",
    "typescript": "3.9.7"
  },
  "dependencies": {
    "node-nats-streaming": "^0.3.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^9.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "rootDir": ".",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "\\.spec.ts$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
